<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="@string/veuillez_creer_new_mdp"
                android:textColor="#000000"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/new_mdp"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#FFFFFF"
                android:inputType="textPassword"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="@string/nouveau_mot_de_passe"
                android:autofillHints="" />

            <EditText
                android:id="@+id/new_mdp_confirm"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:inputType="textPassword"
                android:background="#FFFFFF"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="@string/confirmation_du_nouveau_mot_de_passe"
                android:autofillHints="" />

            <Button
                android:id="@+id/confirm2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="#68c2e8"
                android:text="@string/confirmation" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>